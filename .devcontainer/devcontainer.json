{
  "name": "Flask Dev Container",
  "dockerFile": "dev.Dockerfile",
  "context": "..",
 
  "workspaceFolder": "/workspace/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/${localWorkspaceFolderBasename},type=bind",

  "runArgs": ["-p", "5000:5000"], // Map host port 5000 to container port 5000 (change left port if needed)
  "remoteUser": "devuser",


  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.testing.pytestEnabled": true,
        "python.formatting.provider": "black",
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.debugpy"
      ]
    }
  },


  "overrideCommand": false,
  "postCreateCommand": "pip install -r requirements.txt"
}